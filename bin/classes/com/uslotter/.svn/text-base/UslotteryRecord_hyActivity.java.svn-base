		iv2.setTag("");
		iv.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				Intent intent = new Intent(Intent.ACTION_GET_CONTENT);
				intent.addCategory(Intent.CATEGORY_OPENABLE);
				intent.setType("image/*");
				intent.putExtra("return-data", true);
				startActivityForResult(intent, 4);		
			}
		});
		btn_exit.setOnClickListener(new View.OnClickListener() {	
			@Override
			public void onClick(View v) {
				finish();
			}
		});
		btn_save.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				if(sp.getSelectedItem().toString().trim().equals("")){
					DialogUtil.showDialog(UslotteryRecord_hyActivity.this, "请选择会议主题!");
					return;
				}
				if(et_name.getText().toString().trim().equals("")){
					DialogUtil.showDialog(UslotteryRecord_hyActivity.this, "请填写会议名称!");
					return;
				}
				if(et_content.getText().toString().trim().equals("")){
					DialogUtil.showDialog(UslotteryRecord_hyActivity.this, "请填写会议内容!");
					return;
				}
				if(et_remarks.getText().toString().trim().equals("")){
					DialogUtil.showDialog(UslotteryRecord_hyActivity.this, "请填写备注!");
					return;
				}
			}
		});
	}


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg_deco_gray"
	>
	<LinearLayout 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/textview_boder"
	android:layout_margin="10dip"
	>
	<ImageView
        android:id="@+id/wdinfo_hz_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />
     
    <TextView
        android:id="@+id/wdinfo_hz_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="网点编号："
        android:textSize="30dp"
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#000000" />
    
    
    <TextView
        android:id="@+id/wdinfo_hz_cz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="业主："
        android:textSize="30dp"
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#000000"  />
  
  
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="行政区域："
        android:id="@+id/wdinfo_hz_name"
        android:textSize="30dp" 
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#000000" />
    
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="竞彩："
        android:id="@+id/wdinfo_hz_jc"
        android:textSize="30dp" 
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#ff0000" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="高频："
        android:id="@+id/wdinfo_hz_gp"
        android:textSize="30dp" 
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#ff0000" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="刷卡次数："
        android:id="@+id/wdinfo_hz_tcount"
        android:textSize="30dp" 
        android:gravity="left"
        android:layout_weight="1"
        android:textColor="#000000" />
      <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:background="#9D9D9D"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:visibility="gone"
         		android:id="@+id/wdinfo_hz_iv_bottom"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="提示:"
        android:id="@+id/wdinfo_hz_prompt"
        android:textSize="25dp" 
        android:gravity="left"
        android:textColor="#ff0000"
        android:visibility="gone" 
        android:scrollbars="vertical"/>
  <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:background="#9D9D9D"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		/>
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="立即返回"
        android:id="@+id/wdinfo_hz_return"
        android:textSize="20dp" 
        android:layout_gravity="center"
		/>
</LinearLayout>
</LinearLayout>
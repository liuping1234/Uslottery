<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_deco_gray"
    android:fillViewport="true" >
	<LinearLayout 
    android:id="@+id/record2_wdbzh_up_linear1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
     
	<RelativeLayout
	    android:id="@+id/record2_wdbzh_up_notification_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:orientation="horizontal"
	    android:background="@drawable/main_navigation_highlight_bg" >

	    <Button
	        android:id="@+id/record2_wdbzh_up_back"
	        android:layout_width="80dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dip"
	        android:textColor="@color/white"
	        android:text="取消"
	        android:textSize="18dp" 
	        android:background="@drawable/zxbutton_selector"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="#ffffff"
		    android:textSize="25dip"
		    android:text="网点标准化"
		    />
	    <Button
	        android:id="@+id/record2_wdbzh_up_save"
	        android:layout_width="80dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="20dip"
	        android:textColor="@color/white"
	        android:text="保 存"
	        android:textSize="18dip" 
	        android:background="@drawable/zxbutton_selector"
	        />
	</RelativeLayout>
	  <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/textview_boder"
	    android:layout_marginLeft="10dip"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginBottom="10dip"
	    android:id="@+id/record2_wdbzh_up_llwdbzh"
	    >
	   <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal"   
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:id="@+id/record2_wdbzh_up_rl"
	    >
     <TextView 
         	android:layout_width="wrap_content"
        	android:layout_height="40dip"
        	android:gravity="center_vertical"
        	android:text="标准化检查(a)"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:textColor="#000000"
        	android:textSize="30dip"
        	android:id="@+id/record2_wdbzh_up_bzh"
        	/>
     <TextView android:layout_width="wrap_content"
        	android:layout_height="40dip"
        	android:gravity="center_vertical"
        	android:text=""
        	android:textColor="#000000"
        	android:textSize="20dip"
        	android:id="@+id/record2_wdbz_uph_kf"
        	android:layout_toRightOf="@id/record2_wdbzh_up_bzh"
        	/>
    
     </RelativeLayout>
     <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:background="#9D9D9D"/>
      <LinearLayout android:layout_width="fill_parent"
        	android:layout_height="60dip"
        	android:orientation="horizontal"
        	android:gravity="center_vertical"
        	>
       <TextView android:layout_width="wrap_content"
        	android:layout_height="40dip"
        	android:gravity="center"
        	android:text="网点状态:"
        	android:textColor="#000000"
        	android:textSize="20dip"
        	android:layout_marginLeft="10dip"
        	/>
    	 <Spinner android:layout_width="150dip"
         	  android:layout_height="wrap_content"
         	  android:layout_marginLeft="20dip"
         	  android:entries="@array/status"
         	  android:id="@+id/record2_wdbzh_up_sp"
         	  />
       </LinearLayout>
        <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:background="#9D9D9D"
         		android:id="@+id/record2_wdbzh_up_iv_kfx"/>
      <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    android:id="@+id/record2_wdbzh_up_rl_kfx"
	    >
      <TextView android:layout_width="wrap_content"
        	android:layout_height="60dip"
       		 android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:text="得分:"
        	android:textColor="#000000"
        	android:gravity="center_vertical"
        	android:textSize="20dip"
        	android:id="@+id/record2_wdbzh_up_df"
        	/>
  	 <TextView android:layout_width="fill_parent"
        	android:layout_height="60dip"
        	android:text="无"
        	android:textColor="#000000"
        	android:gravity="center_vertical"
        	android:textSize="20dip"
        	android:scrollbars="vertical" 	
        	android:id="@+id/record2_wdbzh_up_tv_df"
        	android:layout_toRightOf="@id/record2_wdbzh_up_df"
        	/>
  	  <ImageView android:layout_width="wrap_content"
        	android:layout_height="20dip" 	
        	android:src="@drawable/a1"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="10dip"
        	/>
      </RelativeLayout>
      <ImageView android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#9D9D9D"/>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="20dip"
	    android:layout_marginTop="5dip"
	    android:layout_marginRight="20dip"
	    android:layout_marginBottom="10dip"
        >
       
       <TextView android:layout_width="wrap_content"
        	android:layout_height="50dip"
        	android:text="网点照片:"
        	android:textColor="#000000"
        	android:textSize="20dip"
        	android:gravity="center_vertical"
        	android:id="@+id/record2_wdbzh_up_wdzp_tv"
        	/>
  
        <ImageView 
            android:layout_width="40dp"
        	android:layout_height="40dip"
        	android:layout_marginLeft="10dip"
        	android:src="@drawable/add1"
        	android:gravity="center_vertical"
        	android:id="@+id/record2_wdbzh_up_wdzp_iv"
        	/>
        <HorizontalScrollView 
	       android:layout_width="fill_parent"
	       android:layout_height="50dip"
	       android:layout_gravity="center_vertical"
	       >
  	   <LinearLayout 
  	   android:layout_width="fill_parent"
       android:layout_height="50dip"
       android:id="@+id/record2_wdbzh_up_wdzp_ll">
  	   </LinearLayout>
       </HorizontalScrollView>
    </LinearLayout>
    </LinearLayout>
	</LinearLayout>
</ScrollView>
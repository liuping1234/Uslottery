<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record2_zdwh_linear1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:focusable="true"
   	android:focusableInTouchMode="true"
    android:background="@drawable/bg_deco_gray">
    
	<RelativeLayout
	    android:id="@+id/notification_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:orientation="horizontal"
	    android:background="@drawable/main_navigation_highlight_bg" >

	    <Button
	        android:id="@+id/maintain_back"
	        android:layout_width="80dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dip"
	        android:textColor="@color/white"
	        android:text="返 回"
	        android:textSize="18dp" 
	        android:background="@drawable/zxbutton_selector"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="#ffffff"
		    android:textSize="25dip"
		    android:text="终端维护"
		    />

	    <Button
	        android:id="@+id/maintain_save"
	        android:layout_width="80dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="20dip"
	        android:textColor="@color/white"
	        android:text="保存"
	        android:textSize="18dip" 
	        android:background="@drawable/zxbutton_selector" />
	</RelativeLayout>

	<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_deco_gray"
    android:fillViewport="true" >
	
		<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/textview_boder"
	    android:layout_marginLeft="10dip"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginBottom="5dip">
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="终端维护"
	        android:textSize="25dip"
	        android:textColor="#000000"
	        android:drawableRight="@drawable/android_list_idex"
	        android:layout_marginRight="10dip"
	        android:layout_marginLeft="5dip" />	   
	        
	    <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/> 
	    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="服务类别:"
	        android:textColor="#000000"
	        android:textSize="20dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	   
	    <Spinner 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:entries="@array/zdwh_type"
	        android:id="@+id/maintain_category"/>	
	    </LinearLayout>
	    
	     <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	      <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="终端型号:"
	        android:textColor="#000000"
	        android:textSize="20dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	    <Spinner 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:id="@+id/maintain_model"/>	
	    </LinearLayout>
	     <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	      <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="整机序号:"
	        android:textColor="#000000"
	        android:textSize="20dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	    <EditText 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:id="@+id/maintain_machine_number"/>	
	    </LinearLayout>
	 
	      <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	      <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="故障描述:"
	        android:textColor="#000000"
	        android:textSize="20dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	    <EditText 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:id="@+id/maintain_fault"/>	
	    </LinearLayout>
	     <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	      
	   <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="处理方式:"
	        android:textColor="#000000"
	        android:textSize="20dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	    <Spinner 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dip"
	        android:entries="@array/zdwh_clfs"
	        android:id="@+id/maintain_processmode "/>	
	    </LinearLayout>
	     
	     <ImageView 
	         android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	    
	    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/textview_boder"
		android:layout_marginRight="5dip">
	     <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical" >
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="维护部件"
	        android:textColor="#000000"
	        android:textSize="25dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"
	        android:drawableRight="@drawable/android_list_idex"/>
	 
	    </LinearLayout>
	     <ImageView 
	         	android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip" 
         		android:background="#9D9D9D"/>
	   
	<LinearLayout
                android:id="@+id/maintain_add_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="部件名称"
                        android:textColor="#000000"
                        android:textSize="20dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="部件编号"
                        android:textColor="#000000"
                        android:textSize="20dip" />
                </LinearLayout>
            </LinearLayout> 
	     
	<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/maintain_add_image"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:background="@drawable/wdwg_add" 
                    android:layout_marginRight="50dip"/>

                <ImageView
                    android:id="@+id/maintain_delete_image"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginLeft="50dip"
                    android:background="@drawable/wdwg_del"  />
            </LinearLayout>
	      
	    </LinearLayout>
	 <ImageView android:layout_width="fill_parent"
         		android:layout_height="2dip"
         		android:layout_marginTop="5dip"
         		android:layout_marginBottom="5dip"
         		android:background="#9D9D9D"/>
	
	 <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:paddingBottom="10dip"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="附        件:"
	        android:textSize="20dip"
	        android:textColor="#000000"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/add1"
	        android:id="@+id/iv_annex"/>	
	        <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/maintain_pic_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip" >
                    </LinearLayout>
                </HorizontalScrollView>
	    </LinearLayout>
	</LinearLayout>
	</ScrollView>
	</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:orientation="vertical"
	android:text="@string/title"
	android:background="@color/white"
	 android:gravity="center_horizontal" 
	>

 <RelativeLayout
	    android:id="@+id/mainnfc_notification_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:orientation="horizontal"
	    android:background="@drawable/main_navigation_highlight_bg" >

	    <Button
	        android:id="@+id/mainnfc_back"
	        android:layout_width="80dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dip"
	        android:textColor="@color/white"
	        android:text="返 回"
	        android:textSize="18dp" 
	        android:background="@drawable/zxbutton_selector"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="#ffffff"
		    android:textSize="25dip"
		    android:text="即开派票"
		    />

	   
	</RelativeLayout>
 <TableLayout 
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		    android:stretchColumns="1,2"
		    android:paddingTop="10dp" 
		    >
    		    <TableRow>	
 	<TextView 
        android:text="电脑或即开编号"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/title_text_6"
		android:textSize="20dp"
	 />  
			
 	 <EditText     android:id="@+id/title"
		           android:numeric="integer"
		            android:text=""
		            android:paddingLeft="3dp"
		             android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
 	 <Button   android:text="查询"
 	      android:id="@+id/btn"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="10dp" />
   </TableRow>
  </TableLayout>	    
	<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			 android:gravity="center" 
			 android:background="@drawable/bglogo"
		 />
	  <LinearLayout
		android:layout_width="match_parent"
		 android:layout_height="match_parent"
		 android:orientation="vertical"
		android:text="@string/title"
		 android:gravity="center" 
		>           
		 <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			 android:gravity="center" 
			 android:id="@+id/data"
			 android:text="请刷网点IC卡..."
			 android:textSize="25dp"
			 android:textColor="@color/title_text_6"
			 /> 
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:id="@+id/message"
			android:text=""
			android:gravity="center" 
			android:textSize="20dp"
			android:paddingTop="30dp"
			android:textColor="@color/title_text_6"
			 /> 
	</LinearLayout>
</LinearLayout>
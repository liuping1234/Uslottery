<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardrecord_linear1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_deco_gray"
    >

	<RelativeLayout
	    android:id="@+id/cardrecord_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:layout_alignParentTop="true"
	    android:orientation="horizontal"
	    android:background="@drawable/main_navigation_highlight_bg" >

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="@color/white"
		    android:textSize="30dip"
		    android:text="录单" />
		
		<Button
	        android:id="@+id/cardrecord_btnback"
	        android:layout_width="80dip"
	        android:layout_height="30dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:textColor="@color/white"
	        android:text="返回"
	        android:textSize="10dip" 
	        android:background="@drawable/zxbutton_selector"/>
		
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/cardrecord_wdlil"
	    android:layout_below="@id/cardrecord_linear"
	    android:layout_alignParentLeft="true"
	    android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:orientation="horizontal"
	    >
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/black"
		    android:textSize="18dip"
		    android:text="输入网点编号："
		    />
		<EditText 
		    android:id="@+id/cardrecord_et"
			android:layout_width="120dip"
		    android:layout_height="50dip"
		    />
		<Button 
			android:id="@+id/cardrecord_btnok"
			android:layout_width="70dip"
			android:layout_height="wrap_content"
			android:text="确定"
			android:background="@drawable/button_submit_selector"
			/>
	</LinearLayout>
	
	<TextView 
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/cardrecord_wdlil"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:textSize="18dip"
		android:text="或："
		android:id="@+id/cardrecord_tw2"
	    />
	<TextView
	    android:layout_below="@id/cardrecord_tw2"
	    android:gravity="center_vertical|center_horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:textSize="30dip"
	    android:textColor="@color/blue"
	    android:text="刷网点IC卡！">
	</TextView>
</RelativeLayout>
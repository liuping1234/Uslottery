<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_deco_gray"
     >

	<RelativeLayout
	    android:id="@+id/linear"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:layout_alignParentTop="true"
	    android:orientation="horizontal"
	    android:background="@drawable/main_navigation_highlight_bg" >

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="@color/white"
		    android:textSize="30dip"
		    android:text="网点查询" />

	    <Button
	        android:id="@+id/wdinfoback"
	        android:layout_width="80dip"
	        android:layout_height="30dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:textColor="@color/white"
	        android:text="返回"
	        android:textSize="10dip" 
	         android:layout_marginLeft="20dip"
	        android:background="@drawable/zxbutton_selector"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/linear2"
	    android:paddingTop="20dip"
	    android:layout_below="@id/linear"
	    android:layout_width="fill_parent"
	    android:layout_height="80dip"
	    >
	    <Button
	        android:id="@+id/wdid_select_button"
	        android:layout_alignParentLeft="true" 
	        android:layout_width="fill_parent"
	    	android:layout_height="80dip"
	    	android:background="@drawable/wdinfomenu_button_selector"
	        />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="60dip"
		    android:layout_alignParentLeft="true"
		    android:gravity="center_vertical"
		    android:paddingLeft="20dip"
		    android:textSize="20dip"
		    android:text="网点编号查询"
		    android:textColor="@color/black"
		    /> 
		 <ImageView 
		     android:src="@drawable/android_list_idex"
		     android:layout_alignParentRight="true"
		     android:paddingRight="20dip"
		     android:layout_width="wrap_content"
		     android:layout_height="60dip"
		     />
	</RelativeLayout>	    
</RelativeLayout>